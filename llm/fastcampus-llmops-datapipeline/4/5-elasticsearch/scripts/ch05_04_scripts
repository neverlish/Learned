# 1. 문서 색인 (CREATE)

# 1-1 id 지정 색인

PUT my_index/_doc/1
{
  "title": "hello world",
  "price": 12000,
  "content": "fastcampus elastic search",
  "created_at": "2025-02-25T14:00:00Z"
}

# 1-2 id 미지정 색인
POST my_index/_doc
{
  "title": "hello world",
  "price": 12000,
  "content": "fastcampus elastic search",
  "created_at": "2025-02-25T14:00:00Z"
}

# 2 문서 조회 (READ)

GET my_index/_doc/1


# 3. 문서 검색

GET my_index/_search
{
  "query": {
    "match": {
      "title": "hello world"
    }
  }
}

# 4. 문서 업데이트 (UPDATE)

POST my_index/_update/1
{
  "doc": {
    "title": "fastcampus data engineering"
  }
}


# 5. 문서 삭제 (DELETE)

DELETE my_index/_doc/1
DELETE my_index/_doc/oYRpS5UB0amlHuli5V37